<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jp.syoboi.android.myingressintelmap.MainActivity$PlaceholderFragment" >

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:id="@+id/webViewContainer"
        android:layout_weight="1" >

    </AbsoluteLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/ingress" />

        <Button
            android:id="@+id/zoomLong"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/zoomLong" />

        <Button
            android:id="@+id/zoomDefault"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/zoomDefault" />

        <Button
            android:id="@+id/currentLocation"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/currentLocation" />
    </LinearLayout>

</LinearLayout>